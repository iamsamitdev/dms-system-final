<!-- Sidebar -->
<div id="sidebar" class="fixed z-30 w-64 min-h-screen p-4 text-white transition-transform duration-300 ease-in-out transform -translate-x-full bg-gray-800 md:translate-x-0 md:relative">
    <!-- Mobile Close Button -->
    <div class="flex justify-end mb-4 md:hidden">
        <button onclick="closeSidebar()" class="text-gray-400 transition-colors duration-200 hover:text-white">
            <i class="text-xl fas fa-times"></i>
        </button>
    </div>

    <!-- Logo -->
    <div class="flex items-center mb-8 space-x-3">
        <div class="flex items-center justify-center w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl">
            <i class="text-lg text-white fas fa-file-alt"></i>
        </div>
        <div>
            <h1 class="text-xl font-bold">DMS Admin</h1>
            <p class="text-xs text-gray-400">Document Management</p>
        </div>
    </div>

    <!-- Navigation Menu -->
    <nav class="space-y-2">
        <!-- Dashboard - ทุก role เข้าถึงได้ -->
        <div class="sidebar-menu-item">
            <a href="/backend/dashboard" class="flex items-center px-3 py-2 space-x-3 text-gray-300 transition duration-200 rounded-lg hover:bg-gray-700 hover:text-white">
                <i class="w-5 fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
        </div>

        <!-- Documents - ทุก role เข้าถึงได้ -->
        <div class="sidebar-menu-item">
            <a href="/backend/documents" class="flex items-center px-3 py-2 space-x-3 text-gray-300 transition duration-200 rounded-lg hover:bg-gray-700 hover:text-white">
                <i class="w-5 fas fa-folder"></i>
                <span>Documents</span>
            </a>
        </div>

        <!-- Users - เฉพาะ Administrator -->
        {{#if (eq user.roleId 1)}}
        <div class="sidebar-menu-item">
            <a href="/backend/users" class="flex items-center px-3 py-2 space-x-3 text-gray-300 transition duration-200 rounded-lg hover:bg-gray-700 hover:text-white">
                <i class="w-5 fas fa-users"></i>
                <span>Users</span>
            </a>
        </div>
        {{/if}}

        <!-- Reports - Manager และ Administrator -->
        {{#if (or (eq user.roleId 1) (eq user.roleId 2))}}
        <div class="sidebar-menu-item">
            <a href="/backend/reports" class="flex items-center px-3 py-2 space-x-3 text-gray-300 transition duration-200 rounded-lg hover:bg-gray-700 hover:text-white">
                <i class="w-5 fas fa-chart-bar"></i>
                <span>Reports</span>
            </a>
        </div>
        {{/if}}

        <!-- Settings - เฉพาะ Administrator -->
        {{#if (eq user.roleId 1)}}
        <div class="sidebar-menu-item">
            <a href="/backend/settings" class="flex items-center px-3 py-2 space-x-3 text-gray-300 transition duration-200 rounded-lg hover:bg-gray-700 hover:text-white">
                <i class="w-5 fas fa-cog"></i>
                <span>Settings</span>
            </a>
        </div>
        {{/if}}
    </nav>

    <!-- Divider -->
    <hr class="my-6 border-gray-700">

    <!-- Quick Stats -->
    <div class="space-y-3">
        <h3 class="text-sm font-semibold tracking-wider text-gray-400 uppercase">Quick Stats</h3>
        <div class="p-3 bg-gray-700 rounded-lg">
            <div class="flex items-center justify-between">
                <span class="text-sm text-gray-300">Total Documents</span>
                <span class="text-sm font-semibold text-blue-400">1,234</span>
            </div>
        </div>
        <div class="p-3 bg-gray-700 rounded-lg">
            <div class="flex items-center justify-between">
                <span class="text-sm text-gray-300">Active Users</span>
                <span class="text-sm font-semibold text-green-400">89</span>
            </div>
        </div>
        <div class="p-3 bg-gray-700 rounded-lg">
            <div class="flex items-center justify-between">
                <span class="text-sm text-gray-300">Storage Used</span>
                <span class="text-sm font-semibold text-yellow-400">67%</span>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="absolute bottom-4 left-4 right-4">
        <div class="text-xs text-center text-gray-500">
            <p>&copy; 2025 DMS System</p>
            <p>Version 1.0.0</p>
        </div>
    </div>
</div>

<!-- Mobile Sidebar Overlay -->
<div class="fixed inset-0 z-20 bg-gray-900 opacity-50 md:hidden" id="sidebar-overlay" onclick="closeSidebar()" style="display: none;"></div>
