<!-- Header -->
<header class="px-6 py-4 bg-white border-b border-gray-200 shadow-sm">
    <div class="flex items-center justify-between">
        <!-- Left Side - System Name & Mobile Menu -->
        <div class="flex items-center space-x-4">
            <!-- Mobile Menu Button -->
            <button onclick="toggleSidebar()" class="text-gray-500 md:hidden hover:text-gray-700 focus:outline-none">
                <i class="text-xl fas fa-bars"></i>
            </button>
            
            <!-- System Name -->
            <div class="flex items-center space-x-3">
                <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-gradient-to-r from-blue-500 to-indigo-600">
                    <i class="text-sm text-white fas fa-file-alt"></i>
                </div>
                <div>
                    <h1 class="text-xl font-bold text-gray-900">DMS System</h1>
                    <p class="hidden text-xs text-gray-500 sm:block">Document Management Dashboard</p>
                </div>
            </div>
        </div>

        <!-- Right Side - Search & User Menu -->
        <div class="flex items-center space-x-4">
            <!-- Search Bar -->
            <div class="relative hidden md:flex">
                <input type="text" placeholder="Search documents..." class="w-64 py-2 pl-10 pr-4 transition duration-200 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <i class="text-gray-400 fas fa-search"></i>
                </div>
            </div>

            <!-- Notifications -->
            <div class="relative">
                <button class="relative text-gray-500 hover:text-gray-700 focus:outline-none">
                    <i class="text-xl fas fa-bell"></i>
                    <span class="absolute flex items-center justify-center w-5 h-5 text-xs text-white bg-red-500 rounded-full -top-1 -right-1">3</span>
                </button>
            </div>

            <!-- User Menu -->
            <div class="relative">
                <button id="user-button" onclick="toggleUserDropdown()" class="flex items-center space-x-3 text-gray-700 hover:text-gray-900 focus:outline-none">
                    <div class="flex items-center justify-center w-8 h-8 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600">
                        {{#if user.firstName}}
                            <span class="text-sm font-medium text-white">{{substring user.firstName 0 1}}{{substring user.lastName 0 1}}</span>
                        {{else}}
                            <i class="text-sm text-white fas fa-user"></i>
                        {{/if}}
                    </div>
                    <div class="hidden text-left sm:block">
                        <p class="text-sm font-semibold">
                            {{#if user.firstName}}
                                {{user.firstName}} {{user.lastName}}
                            {{else}}
                                {{user.username}}
                            {{/if}}
                        </p>
                        <p class="text-xs text-gray-500">
                            {{#if user.role.name}}
                                {{user.role.name}}
                            {{else}}
                                User
                            {{/if}}
                        </p>
                    </div>
                    <i class="text-sm fas fa-chevron-down"></i>
                </button>

                <!-- User Dropdown Menu -->
                <div id="user-dropdown" class="absolute right-0 z-50 hidden w-48 mt-2 bg-white border border-gray-200 rounded-lg shadow-lg">
                    <div class="py-2">
                        <!-- Profile Info -->
                        <div class="px-4 py-2 border-b border-gray-100">
                            <p class="text-sm font-semibold text-gray-900">
                                {{#if user.firstName}}
                                    {{user.firstName}} {{user.lastName}}
                                {{else}}
                                    {{user.username}}
                                {{/if}}
                            </p>
                            <p class="text-xs text-gray-500">{{user.email}}</p>
                        </div>
                        
                        <!-- Menu Items -->
                        <a href="/backend/profile" class="flex items-center px-4 py-2 space-x-3 text-sm text-gray-700 transition duration-200 hover:bg-gray-100">
                            <i class="w-4 fas fa-user-circle"></i>
                            <span>Profile</span>
                        </a>
                        
                        <!-- Settings - เฉพาะ Administrator -->
                        {{#if (eq user.roleId 1)}}
                        <a href="/backend/settings" class="flex items-center px-4 py-2 space-x-3 text-sm text-gray-700 transition duration-200 hover:bg-gray-100">
                            <i class="w-4 fas fa-cog"></i>
                            <span>Settings</span>
                        </a>
                        {{/if}}
                        
                        <div class="my-1 border-t border-gray-100"></div>
                        
                        <a href="#" class="flex items-center px-4 py-2 space-x-3 text-sm text-red-600 transition duration-200 hover:bg-red-50" onclick="handleLogout(event)">
                            <i class="w-4 fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
